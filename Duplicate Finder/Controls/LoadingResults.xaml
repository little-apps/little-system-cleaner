<Window x:Class="Duplicate_Finder.Controls.LoadingResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preparing Results"
        Width="469"
        Height="120"
        Closing="LoadingResults_Closing"
        Loaded="LoadingResults_Loaded"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow">
    <StackPanel Margin="5,0">
        <Label Height="31"
               Margin="0,10,0,10"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center">
            Please wait while the results are being prepared...
        </Label>
        <ProgressBar Height="30" IsIndeterminate="True" />
    </StackPanel>
</Window>